from django.urls import path
from . import views

urlpatterns = [
    # 1. صفحة تسجيل الدخول (البداية)
    path('', views.login_view, name='login'),
    
    # 2. صفحة الخروج
    path('logout/', views.logout_view, name='logout'),
    
    # 3. دخول الضيوف (المعدلة لتشغيل صفحة تسجيل اسم الزائر)
    path('guest_login/', views.guest_login, name='guest_login'),

    # 4. واجهة المكتبة الرئيسية بعد الدخول (home)
    path('home/', views.home, name='home'),
    
    # 5. لوحة تحكم الروت (Zero) لمراقبة الموقع
    path('dashboard/', views.root_dashboard, name='root_dashboard'),

    # 6. روابط الأقسام (تم تغيير str لـ int لتتوافق مع قاعدة البيانات الجديدة)
    path('department/<int:dept_id>/', views.department_view, name='department'),
    
    # 7. روابط السمسترات داخل كل قسم
    path('department/<int:dept_id>/semester/<int:sem_id>/', views.semester_view, name='semester'),
    
    # 8. صفحة المادة العلمية (الملفات والمنتدى المطور)
    path('course/<int:course_id>/', views.course_detail, name='course_detail'),

    # 9. روابط العمليات (تحميل الملفات وحذفها)
    path('download/<int:file_id>/', views.download_file, name='download_file'),
    path('delete_file/<int:file_id>/', views.delete_file, name='delete_file'),
    
    # 10. رابط إضافة تعليق أو رد (جديد كلياً لتشغيل المنتدى)
    path('course/<int:course_id>/add_comment/', views.add_comment, name='add_comment'),
    
    # 11. إضافة مستخدمين (للإدارة فقط)
    path('add-user/', views.add_user_view, name='add_user'),
]
