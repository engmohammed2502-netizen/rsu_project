version: '3.8'
services:
  # خدمة تحديث الـ IP للدومين
  duckdns:
    image: lscr.io/linuxserver/duckdns:latest
    container_name: duckdns
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Africa/Khartoum  # توقيت السودان أو مدينتك
      - SUBDOMAINS=eng-zero-library  # ضع اسم الدومين فقط بدون .duckdns.org
      - TOKEN=46faa2e5-25e7-46d9-9e1f-b794e9d8380f # ضع التوكين الذي نسخته من الموقع هنا
    restart: unless-stopped

  # خدمة إدارة المواقع والشهادات
  npm:
    image: 'jc21/nginx-proxy-manager:latest'
    container_name: nginx-proxy-manager
    restart: unless-stopped
    ports:
      - '80:80'    # منفذ الويب العادي
      - '81:81'    # منفذ لوحة تحكم الإدارة
      - '443:443'  # منفذ الويب الآمن HTTPS
    volumes:
      - ./data:/data
      - ./letsencrypt:/etc/letsencrypt









الدومين الصغير react



services:
  my-app:
    image: nginx:alpine
    container_name: react-site
    volumes:
      - ./build:/usr/share/nginx/html  # ربط مجلد الملفات بالحاوية
    ports:
      - "8080:80"  # سنفتح الموقع داخلياً على بورت 8080
    restart: unless-stopped
